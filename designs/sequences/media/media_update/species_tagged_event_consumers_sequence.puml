@startuml SpeciesTagged Event Consumers Sequence
queue "Event Bus" as Events
participant "Materialized Data Worker" as MaterializedDataWorker
participant "API Server" as API
database "Database" as DB

== Parallel consumers of SpeciesTagged event ==
par ScubaDex Update
    Events -> MaterializedDataWorker: consume SpeciesTagged (user_id, species_id, media_id)
    activate MaterializedDataWorker
    MaterializedDataWorker -> DB: upsert scubadex_entries\n(user_id, species_id)\nINCREMENT times_encountered
    MaterializedDataWorker -> DB: if first encounter,\nset date_first_encountered = TODAY()
    MaterializedDataWorker -> Events: publish ScubaDexUpdated\n(user_id, species_id)
    deactivate MaterializedDataWorker
end par

par API Cache Invalidation
    Events -> API: consume SpeciesTagged (media_id, species tags)
    activate API
    API -> API: invalidate media cache (media_id)
    deactivate API
end par
@enduml
