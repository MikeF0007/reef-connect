# Backend-wide .env.example for microservices deployment mode.
# Use this when DEPLOYMENT_MODE=microservices for independent backend deployment
# Shared vars can be in root .env if needed

# Deployment Mode
DEPLOYMENT_MODE=microservices

# Application Settings
ENVIRONMENT=development
DEBUG=true
API_V1_PREFIX=/api/v1

# Database Configuration
DATABASE_URL=postgresql+asyncpg://reefconnect:password@localhost:5432/reefconnect_dev
DATABASE_SYNC_URL=postgresql+psycopg2://reefconnect:password@localhost:5432/reefconnect_dev

# JWT Authentication
SECRET_KEY=secret-key-placeholder
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings
BACKEND_CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# PostgreSQL Settings (if using Docker)
POSTGRES_USER=reefconnect
POSTGRES_PASSWORD=password
POSTGRES_DB=reefconnect_dev
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
